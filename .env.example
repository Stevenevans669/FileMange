# Required for Next.js runtime
NODE_ENV=development

# Public environment variables (exposed to the browser)
NEXT_PUBLIC_APP_NAME=Vercel Cloud Drive
NEXT_PUBLIC_SUPPORT_EMAIL=support@example.com

# Server-side environment variables (never exposed to the browser)
# Neon / Postgres connection string (use the pooled connection for Vercel serverless)
DATABASE_URL=postgresql://user:password@localhost:5432/vcd?sslmode=require
STORAGE_BUCKET=vcd-local-bucket
